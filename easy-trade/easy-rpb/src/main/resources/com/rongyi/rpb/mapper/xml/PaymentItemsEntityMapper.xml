<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.rongyi.rpb.mapper.PaymentItemEntityMapper">

	<resultMap id="BaseResultMap" type="com.rongyi.easy.rpb.domain.PaymentItemEntity">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="order_item_no" property="detailNum" jdbcType="VARCHAR" />
		<result column="payment_order_id" property="paymentId" jdbcType="INTEGER" />
	</resultMap>

	<sql id="Base_Column_List">
		id, order_item_no,payment_order_id
	</sql>

	<insert id="insert" parameterType="com.rongyi.easy.rpb.domain.PaymentItemEntity"  useGeneratedKeys="true" keyProperty="id">
		<!-- <selectKey resultType="java.lang.Integer" keyProperty="id" order="BEFORE">
			SELECT LAST_INSERT_ID()
		</selectKey> -->

		insert into payment_order_item
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="detailNum != null">
				order_item_no,
			</if>
			<if test="paymentId != null">
				payment_order_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="detailNum != null">
				#{detailNum,jdbcType=INTEGER},
			</if>
			<if test="paymentId != null">
				#{paymentId,jdbcType=INTEGER}
			</if>
		</trim>
	</insert>

	<update id="updateByPrimaryKeySelective" parameterType="com.rongyi.easy.rpb.domain.PaymentItemEntity">
		update payment_order_item
		<set>
			<if test="detailNum != null">
				order_item_no = #{detailNum,jdbcType=VARCHAR},
			</if>
			<if test="paymentId != null">
				payment_order_id = #{paymentId,jdbcType=INTEGER},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>
	
	<select id="selectByPaymentId" resultMap="BaseResultMap"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from payment_order_item
		where payment_order_id = #{paymentId,jdbcType=VARCHAR}
	</select>
</mapper>