<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans          
    http://www.springframework.org/schema/beans/spring-beans.xsd          
    http://code.alibabatech.com/schema/dubbo          
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service interface="com.rongyi.rss.rpb.OrderNoGenService" version="${dubbo.version}" ref="orderNoGenService" />
	<bean id="orderNoGenService" class="com.rongyi.rpb.service.impl.OrderNoGenServiceImpl" />
	<dubbo:service interface="com.rongyi.rss.rpb.IRpbService" version="${dubbo.version}" ref="rpbService" />
	<bean id="rpbService" class="com.rongyi.rpb.service.impl.RpbServiceImpl" />

	<!--支付宝支付服务接口-->
	<dubbo:service interface="com.rongyi.rss.rpb.IAliPayService" version="${dubbo.version}" timeout="60000" retries="0" ref="aliPayService" />
	<bean id="aliPayService" class="com.rongyi.rpb.service.impl.v6.AliPayServiceImpl" />

	<!--微信支付服务接口-->
	<dubbo:service interface="com.rongyi.rss.rpb.IWechatPayService" version="${dubbo.version}" timeout="60000" retries="0" ref="wechatPayService" />
	<bean id="wechatPayService" class="com.rongyi.rpb.service.impl.v6.WechatPayServiceImpl" />

	<!--微众支付服务接口-->
	<dubbo:service interface="com.rongyi.rss.rpb.IweBankService" version="${dubbo.version}" timeout="60000" retries="0" ref="weBankService" />
	<bean id="weBankService" class="com.rongyi.rpb.service.impl.v6.WeBankPayServiceImpl" />

	<!--现金支付服务接口-->
	<dubbo:service interface="com.rongyi.rss.rpb.ICashPayService" version="${dubbo.version}" timeout="60000" retries="0" ref="cashPayService" />
	<bean id="cashPayService" class="com.rongyi.rpb.service.impl.v6.CashPayServiceImpl" />

	<!--pos银行卡服务接口-->
	<dubbo:service interface="com.rongyi.rss.rpb.IPosBankCardPayService" version="${dubbo.version}" timeout="60000" retries="0" ref="posBankCardPayService" />
	<bean id="posBankCardPayService" class="com.rongyi.rpb.service.impl.v6.PosBankCardServiceImpl" />

	<!--支付查询接口-->
	<dubbo:service interface="com.rongyi.rss.rpb.IQueryService" version="${dubbo.version}" ref="queryService" />
	<bean id="queryService" class="com.rongyi.rpb.service.impl.v6.QueryServiceImpl" />

	<!-- 微信批量退款定时任务 -->
	 <dubbo:service interface="com.rongyi.rss.service.trigger.WeixinBatchRefundTrigger" version="${dubbo.version}" timeout="60000" ref="weixinBatchRefundTrigger" retries="0"/>
	 <bean id="weixinBatchRefundTrigger" class="com.rongyi.rpb.service.impl.WeixinBatchRefundTriggerImpl" />
	 
	<!-- 支付流水接口 -->
	<dubbo:service interface="com.rongyi.rss.rpb.PaymentOrderService" version="${dubbo.version}" timeout="60000" retries="0" ref="paymentOrderService" />
	<bean id="paymentOrderService" class="com.rongyi.rpb.service.impl.v6.PaymentOrderServiceImpl" />
</beans>  