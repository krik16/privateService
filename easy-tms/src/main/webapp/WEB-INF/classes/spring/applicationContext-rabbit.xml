<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:rabbit="http://www.springframework.org/schema/rabbit" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
		http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit-1.0.xsd">

	<!-- <context:property-placeholder location="classpath:properties/config.properties" /> -->
	<!-- 连接服务配置 -->
	<rabbit:connection-factory id="connectionFactory"
		host="192.168.1.50" username="tms" password="tms"
		port="5672" virtual-host="core_test_c2c" channel-cache-size="25" />

	<rabbit:admin connection-factory="connectionFactory" />

	<!-- queue 队列声明 -->
	<rabbit:queue id="tms" durable="true"
		auto-delete="false" exclusive="false" name="tms" />

	<!-- exchange queue binging key 绑定 -->
	<rabbit:direct-exchange name="core_exchange"
		durable="true" auto-delete="false" id="core_exchange">
		<rabbit:bindings>
			<rabbit:binding queue="tms" key="tms" />
		</rabbit:bindings>
	</rabbit:direct-exchange>

	<bean id="receiver" class="com.rongyi.tms.mq.Receiver" />

	<rabbit:listener-container
		connection-factory="connectionFactory" auto-startup="false"  acknowledge="manual"  prefetch="1000">
		<rabbit:listener queues="tms" ref="receiver" />
	</rabbit:listener-container>

	<rabbit:template id="template" connection-factory="connectionFactory"
		exchange="core_exchange" routing-key="tms" />

</beans>